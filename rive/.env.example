# Rive Configuration Example
# Copy this file to .env and customize for your project

# Starting port for review apps (default: 40000)
RIVE_START_PORT=40000

# Hostname for server binding (default: localhost)
RIVE_HOSTNAME=localhost

# Directory where worktrees will be created (default: ~/.rive/worktrees)
RIVE_WORKTREE_DIR=/tmp/rive-worktrees

# Command to start the development server
# %PORT% will be replaced with the allocated port
# %HOSTNAME% will be replaced with the hostname
# Examples:
#   Node.js: npm run dev -- --port %PORT% --host %HOSTNAME%
#   Python: python manage.py runserver %HOSTNAME%:%PORT%
#   Rails: rails server -p %PORT% -b %HOSTNAME%
RIVE_SERVER_COMMAND="npm run dev -- --port %PORT%"

# State file location (default: ~/.rive/state)
RIVE_STATE_FILE=~/.rive/state

# Automatically install dependencies when creating worktree (default: false)
RIVE_AUTO_INSTALL=false

# Custom install command (auto-detected if not specified)
# RIVE_INSTALL_COMMAND="npm ci"

# Enable verbose logging (default: false)
RIVE_VERBOSE=false
